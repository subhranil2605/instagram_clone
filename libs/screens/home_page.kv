#:import get_color_from_hex kivy.utils.get_color_from_hex

<HomePage>
    name: "home_page"
    id: home_page

    MDBoxLayout:
        orientation: 'vertical'

        Appbar:

        MDBoxLayout:

            ScrollView:
                bar_width: 0

                MDBoxLayout:
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        id: timeline

                        # Stories of the users
                        ScrollView:
                            size_hint_y: None
                            height: 60
                            bar_width: 0

                            MDBoxLayout:
                                adaptive_width: True
                                spacing: 30
                                padding: 10

                                MDRoundFlatIconButton:
                                    icon: 'android'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                                MDBoxLayout:
                                    adaptive_width: True
                                    padding: 10
                                    spacing: 60
                                    id: stories

                        MDSeparator:

